#include <iostream>
using namespace std;

int main() {
int arr[] = {2, 3, 4, 10, 40};
int n = sizeof(arr)/sizeof(arr[0]);
int x = 10;

bool found = false;

for(int i = 0; i < n; i++) {
if(arr[i] == x) {
cout << "Found " << x << " at index " << i << endl;
found = true;
break;
}
}
if(!found) {
cout << "Not found" << endl;
}

return 0;
}
